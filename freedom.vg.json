{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Deeksha1703/FIT3179_A2/main/country_data.json"
  },
  "config": {
    "axis": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 18,
      "titleFontSize": 16,
      "labelLimit": 0
    },
    "legend": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 16,
      "titleFontSize": 15,
      "labelLimit": 0
    },
    "header": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 20,
      "titleFontSize": 15
    },
    "title": {
      "font": "sans-serif",
      "subtitleFont": "sans-serif",
      "fontSize": 20
    }
  },
  "transform": [
    {
      "aggregate": [
        {"op": "mean", "field": "Freedom", "as": "Average_Freedom"}
      ],
      "groupby": ["Year", "Regional_Indicator", "Country"]
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": {
          "filled": false,
          "fill": "white"
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Average_Freedom",
          "type": "quantitative",
          "title": "Average Freedom Score"
        },
        "color": {
          "field": "Regional_Indicator",
          "type": "nominal",
          "scale": {
            "domain": [
              "Western Europe",
              "North America",
              "Australia and New Zealand",
              "Middle East and North Africa",
              "Latin America and Caribbean",
              "Central and Eastern Europe",
              "East Asia",
              "Southeast Asia",
              "Commonwealth of Independent States",
              "Sub-Saharan Africa",
              "South Asia"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#2ca02c",
              "#d62728",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf",
              "#f2e63f"
            ]
          },
          "title": "Region"
        },
        "opacity": {
          "value": 0.2
        },
        "tooltip": [
          {"field": "Regional_Indicator", "type": "nominal", "title": "Region"},
          {"field": "Average_Freedom", "type": "quantitative", "title": "Average Freedom"},
          {"field": "Year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "fontSize": 14,
        "fontWeight": "lighter",
        "dx": 5,
        "dy": -5,
        "text": "Australia and New Zealand consistently lead in average freedom levels",
        "color": "black"
      },
      "encoding": {
        "x": {"value": 30},
        "y": {"value": 150}
      }
    }
  ],
  "title": "Average Freedom Over the Years by Region"
}
