{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Deeksha1703/FIT3179_A2/main/country_data.json" 
  },
  "transform": [
    {
      "filter": {
        "field": "Year",
        "range": [2018, 2021]
      }
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "Ladder_Score",
          "order": "descending"
        }
      ]
    },
    {
      "filter": {
        "field": "rank",
        "lte": 10
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country_Name",
      "type": "nominal",
      "title": "Country"
    },
    "y": {
      "field": "Ladder_Score",
      "type": "quantitative",
      "title": "Happiness Index"
    }
  },
  "selection": {
    "yearSlider": {
      "type": "interval",
      "fields": ["Year"],
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2021,
        "step": 1
      }
    }
  }
}
