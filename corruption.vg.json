{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Deeksha1703/FIT3179_A2/main/country_data.json"
  },
  "height": 840,
  "width": "container",
  "title": "Corruption in Different Regions Over the Years",
  "config": {
    "axis": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 20,
      "labelLimit": 0
    },
    "legend": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 16,
      "titleFontSize": 16,
      "labelLimit": 0
    },
    "header": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 20,
      "titleFontSize": 15
    },
    "title": {
      "font": "sans-serif",
      "subtitleFont": "sans-serif",
      "fontSize": 20
    }
  },
  "transform": [
    {
      "filter": {
        "field": "Regional_Indicator",
        "oneOf": [
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and North Africa",
          "Latin America and Caribbean",
          "Central and Eastern Europe",
          "East Asia",
          "Southeast Asia",
          "Commonwealth of Independent States",
          "Sub-Saharan Africa",
          "South Asia"
        ]
      }
    },
    {
      "filter": {
        "field": "Year",
        "oneOf": [2015, 2021]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Corruption",
      "type": "quantitative",
      "title": "Corruption",
      "aggregate": "average"
    },
    "y": {
      "field": "Regional_Indicator",
      "type": "nominal",
      "title": "Regional Indicator",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      },
      "sort": ["Commonwealth of Independent States", "x"] 
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Regional_Indicator",
          "type": "nominal"
        },
        "color": {"value": "#db646f"},
        "tooltip": [
          {"field": "Regional_Indicator", "type": "nominal", "title": "Region"},
          {"field": "Year", "type": "ordinal"}
        ]
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {
            "domain": [2015, 2021],
            "range": ["#e6959c", "#911a24"]
          },
          "title": "Year"
        },
        "tooltip": [
          {"field": "Regional_Indicator", "type": "nominal", "title": "Region"},
          {"field": "Year", "type": "ordinal"},
          {"field": "Corruption", "type": "quantitative", "aggregate": "average", "format": ".3f"}
        ],
        "size": {"value": 200},
        "opacity": {"value": 1}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "fontWeight":"lighter"
      },
      "encoding": {
        "text": {"value": "Average Corruption has reduced in Australia and New Zealand"},
        "x": {"value": 0.5},
        "y": {"value": 110}
      }
    }
  ]
}
