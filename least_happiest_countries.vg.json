{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "title": "Top 10 Least Happiest Countries",
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Deeksha1703/FIT3179_A2/main/country_data.json"
  },
  "config": {
    "axis": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 18,
      "titleFontSize": 16,
      "labelLimit": 0
    },
    "legend": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 16,
      "titleFontSize": 15,
      "labelLimit": 0
    },
    "header": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 20,
      "titleFontSize": 15
    },
    "title": {
      "font": "sans-serif",
      "subtitleFont": "sans-serif",
      "fontSize": 20
    }
  },
  "params": [
    {
      "name": "Year",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year === Year"
    },
    {
      "filter": "datum.Country_Name !== 'Central African Republic'"
    },
    {
      "window": [
        {"op": "rank", "as": "rank"}
      ],
      "sort": [
        {"field": "Ladder_Score", "order": "ascending"}
      ]
    },
    {
      "filter": "datum.rank <= 10"
    },
    {
      "calculate": "Year === 2021 ? 5.53 : Year === 2020 ? 5.47 : Year === 2019 ? 5.41 : Year === 2018 ? 5.38 : null",
      "as": "redLineValue"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 40
      },
      "encoding": {
        "x": {
          "field": "Country_Name",
          "type": "nominal",
          "title": "Country",
          "sort": "y"
        },
        "y": {
          "field": "Ladder_Score",
          "type": "quantitative",
          "title": "Happiness Index"
        },
        "color": {
          "field": "Regional_Indicator",
          "type": "nominal",
          "scale": {
            "domain": [
              "Western Europe",
              "North America",
              "Australia and New Zealand",
              "Middle East and North Africa",
              "Latin America and Caribbean",
              "Central and Eastern Europe",
              "East Asia",
              "Southeast Asia",
              "Commonwealth of Independent States",
              "Sub-Saharan Africa",
              "South Asia"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#2ca02c",
              "#d62728",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf",
              "#f2e63f"
            ]
          },
          "title": "Region"
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country Name"},
          {"field": "Regional_Indicator", "type": "nominal", "title": "Region"},
          {"field": "Ladder_Score", "type": "quantitative", "format": ",", "title": "Happiness Index"}
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 2,
        "opacity": 0.7
      },
      "encoding": {
        "y": {
          "field": "redLineValue",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "fontSize": 15,
        "fontWeight": "lighter",
        "dx": 5, 
        "dy": -5, 
        "text": "The top 10 unhappiest countries rank well below the global happiness average."
      },
      "encoding": {
        "x": {"value": 50},
        "y": {"value": 35} 
      }
    }
  ]
}
